apiVersion: v1
kind: Service
metadata:
  name: jetty-runtimes-common-testing
spec:
  type: LoadBalancer
  ports:
  - port: 80
    targetPort: 8080
  selector:
    app: jetty-runtimes-common-testing-app
---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: jetty-runtimes-common-testing
spec:
  replicas: 1
  template:
    metadata:
      name: jetty-runtimes-common-testing
      labels:
        app: jetty-runtimes-common-testing-app
    spec:
      containers:
      - name: jetty-runtimes-common-testing
        imagePullPolicy: Always
        image: ${TESTED_IMAGE}
        resources:
          requests:
            cpu: 100m
            memory: "512Mi"
          limits:
            cpu: 200m
            memory: "1024Mi"
        env:
        - name: HEAP_SIZE_RATIO
          value: "50"
        ports:
        - containerPort: 8080